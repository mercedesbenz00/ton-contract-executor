    "ts-node": "^10.7.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "bn.js": "^5.2.0",
    "ton": "^9.6.3",
    "ton-compiler": "^0.9.0"
  },
  "scripts": {
    "copy:wasm": "cp ./src/vm-exec/vm-exec.js ./dist/vm-exec/vm-exec.js && cp ./src/vm-exec/vm-exec.wasm ./dist/vm-exec/vm-exec.wasm",
    "copy:native": "copyfiles -u 1 ./src/native/**/* ./dist/ && copyfiles -u 1 ./src/lib/**/*/** ./dist/",
