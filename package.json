    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "copyfiles": "^2.4.1",
